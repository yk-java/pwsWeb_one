<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:aop="http://www.springframework.org/schema/aop"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">
	<!-- 扫描注解 -->
	<context:annotation-config />
	<context:component-scan base-package="com.glens.*" />
	<!-- 启动对@AspectJ注解的支持 -->
	<aop:aspectj-autoproxy proxy-target-class="true" />

	<bean
		class="com.glens.pwCloudOs.om.deviceMgr.device.aop.MctDeviceOpLogAspect">
		<property name="opLogDao" ref="deviceOpLogDao"></property>
	</bean>

	<!-- 配置加载 -->
	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
		<property name="ignoreResourceNotFound" value="true" />
		<property name="locations">
			<list>
				<value>classpath:/jdbc.properties</value>
				<value>classpath:/mongo.properties</value>
				<value>classpath:/pwcloudos.properties</value>
				<value>classpath:/es.properties</value>
				<value>classpath:/oa.properties</value>
			</list>
		</property>
	</bean>

	<!-- 编码生成器相关 -->
	<bean id="codeWorkerBuilder"
		class="com.glens.eap.platform.framework.codeCenter.impl.CodeWorkerFactoryImpl" />
	<bean id="simpleCodeWorker" factory-bean="codeWorkerBuilder"
		factory-method="build">
		<constructor-arg value="simple" />
	</bean>

	<bean id="pwcloudosConfig" class="com.glens.pwCloudOs.config.PWCloudOsConfig"
		scope="prototype" factory-method="getInstance">
		<property name="fileServerUploadUrl">
			<value>${fileserver.upload}</value>
		</property>
		<property name="tmpfileHome">
			<value>${pwcloudos.tmpfileHome}</value>
		</property>
		<property name="deleteFileUrl">
			<value>${fileserver.delete}</value>
		</property>
		<property name="uploadMergeBase64ImgUrl">
			<value>${fileserver.uploadMergeBase64Img}</value>
		</property>
		<property name="batchUploadBase64ImgUrl">
			<value>${fileserver.batchUploadBase64Img}</value>
		</property>
		<property name="downloadUrl">
			<value>${fileserver.download}</value>
		</property>
		<property name="geocoderUrl">
			<value>${pwcloudos.geocoderUrl}</value>
		</property>
		<property name="zipFiles">
			<value>${fileserver.zipFiles}</value>
		</property>
		<property name="wsUrl">
			<value>${pwcloudos.wsUrl}</value>
		</property>
		<property name="getExpensesFromOAUrl">
			<value>${oa.getExpensesFromOAUrl}</value>
		</property>
		<property name="pushEmployeeToOAUrl">
			<value>${oa.pushEmployeeToOAUrl}</value>
		</property>
		<property name="fileUrl">
			<value>${fileserver.fileUrl}</value>
		</property>
		<property name="prefix">
			<value>${fileserver.prefix}</value>
		</property>
		<property name="updateProjectUrl">
			<value>${oa.updateProjectUrl}</value>
		</property>
	</bean>

	<bean id="httpClient" class="com.glens.eap.platform.afinal.FinalHttp">
	</bean>

	<!-- es知识库搜索 -->
	<bean id="esService" class="com.glens.eap.platform.es.impl.ElasticSearchServiceImpl">
		<property name="clusterList">
			<list>
				<value>${es.server1}</value>
			</list>
		</property>
		<property name="index">
			<value>${es.index}</value>
		</property>
		<property name="type">
			<value>${es.type}</value>
		</property>
	</bean>

	<!-- es问题库搜索 -->
	<bean id="esQuestionService" class="com.glens.eap.platform.es.impl.EsQuestionServiceImpl">
		<property name="clusterList">
			<list>
				<value>${es.server1}</value>
			</list>
		</property>
		<property name="index">
			<value>${es.index}</value>
		</property>
		<property name="type">
			<value>${es.type1}</value>
		</property>
	</bean>

</beans>